{{#each errors}}
  <div class="alert alert-danger text-center alert-dismissible fade show">{{text}}
  <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button></div>
  </div>
{{/each}}
<script>
function onSuccess(googleUser) {
      console.log('Logged in as: ' + googleUser.getBasicProfile().getName());
    }
    function onFailure(error) {
      console.log(error);
    }
function renderButton() {
      gapi.signin2.render('my-signin2', {
      'scope': 'profile email',
      'width': 240,
      'height': 50,
      'longtitle': true,
      'theme': 'dark',
      'onsuccess': onSuccess,
      'onfailure': onFailure
      });
    }

</script>
<section id="">
  <div class="container-fluid">
    <div class="row mb-0">
      <!--  visible only on md and bigger -->
      <div class="d-none d-md-flex col-md-4" id="loginLeftSide">
        <div class="loginLeftSide">
          <a href="/">
          <img src="images/logoSmallSlice.svg" alt="labcube" class="smallLogo img-fluid">
          </a>
        </div>
        <div class="socialLogin pl-3 pr-0">
          <a href="#" class=""><i class="fab fa-twitter"></i></a>
          <a href="#" class=""><i class="fab fa-instagram"></i></a>
          <a href="#" class=""><i class="fab fa-facebook-f"></i></a>
          <a href="#" class=""><i class="fab fa-youtube"></i></a>
        </div><!-- social col-md-4 end -->
      </div><!-- login leftside end -->

      <div class="col-xs-12 col-sm-12 col-md-8 pl-0 pr-0">
        <div class="backgroundImage">
          <div class="blueOverlay" id="userLogin">

                <form action="/prijava" method="POST" class="registerForm d-flex flex-column justify-content-center login ml-5 mt-5 col-sm-9 col-md-8 col-10 col-lg-7 ">
                  <h2 class="mb-2">Prijava</h2>

                      <!-- <p class="mb-5"><a href="/google" class="d-inline"><img src="/images/googleBtn.png" class="text-left mt-4 d-block" style="height:40px;"></a></p> -->
