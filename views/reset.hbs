{{#each errors}}
  <div class="alert alert-danger text-center alert-dismissible fade show">{{text}}
  <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button></div>
  </div>
{{/each}}
<section id="">
  <div class="container-fluid">
    <div class="row mb-0">
      <!--  visible only on md and bigger -->
      <div class="d-none d-md-flex col-md-4" id="loginLeftSide">
        <div class="loginLeftSide">
          <a href="/">
          <img src="../images/logoSmallSlice.svg" alt="labcube" class="smallLogo img-fluid">
          </a>
        </div>
        <div class="socialLogin">
          <a href="#" class=""><i class="fab fa-twitter"></i></a>
          <a href="#" class=""><i class="fab fa-instagram"></i></a>
          <a href="#" class=""><i class="fab fa-facebook-f"></i></a>
          <a href="#" class=""><i class="fab fa-youtube"></i></a>
        </div><!-- social col-md-4 end -->
      </div><!-- login leftside end -->

      <div class="col-sm-12 col-md-8 pl-0 pr-0">
        <div class="backgroundImage">
          <div class="blueOverlay">

                <form action="/resetPass/{{token}}" method="POST" class="registerForm login d-flex flex-column justify-content-center ml-5 col-5" >
                  <h2 class="mb-3">Postavite novu lozinku</h2>
                  <div class="form-group">
                    <input id="password" type="password" name="password" class="form-control">
                    <label for="password" class="text-white">nova lozinka</label>
                  </div>
                  <div class="form-group">
                    <input id="confirm" type="password" name="confirm" class="form-control">
                    <label for="confirm" class="text-white">ponovite novu lozinku</label>
                  </div>
                  <button class="btn btnLogin btn-block text-uppercase">postavite novu lozinku</button>
                </form>
              <!-- </form> -->
          </div><!-- blueoverlay -->
        </div><!-- backgroundImage -->
      </div><!-- col-8 -->
    </div><!-- row -->
  </div><!-- container-fluid -->
</section>
