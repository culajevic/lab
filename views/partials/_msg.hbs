{{#if success_msg}}
<div class="alert alert-success alert-dismissible fade show text-center">{{success_msg}}
<button type="button" class="close" data-dismiss="alert"><span>&times;</span></button></div>
{{/if}}


{{#if error_msg}}
<div class="alert alert-danger text-center alert-dismissible fade show">{{error_msg}}
<button type="button" class="close" data-dismiss="alert"><span>&times;</span></button></div>  
{{/if}}
