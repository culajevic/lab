{{> _innerNavFrontend}}

<div class="container-fluid pr-0 pl-0">
  <div class="row">
    <div class="col-lg-12">
      <div id="mapPrices" class="d-none">
      </div>
    </div>
  </div>
</div>



<div class="container" id="contactUs">
  <div class="row">
    <div class="container contact-form mt-4">
        <h1 class="headTitleConditions">Kontakt</h1>
        <!-- <small>Sva polja su obavezna</small> -->
              <form method="POST" action="/contact" class="mt-4" id="contactDetails">

                 <div class="row">
                      <div class="col-md-6 pt-4 pr-5" style="border-right:1px solid #e1e1e1;">
                          <div class="form-group">
                              <input type="text" name="name" class="form-control" placeholder="Ime *" value="" data-hj-allow required/>
                          </div>
                          <div class="form-group">
                              <input type="email" name="email" class="form-control" placeholder="E mail *" value="" data-hj-allow required/>
                          </div>

                          <div class="form-group">
                              <input type="hidden" name="odjebjelansiran" class="form-control"  value=""  required/>
                          </div>


                          <div class="form-group">
                              <textarea class="form-control" id="questionComment" name="message" data-hj-allow placeholder="Upišite ovde Vaše pitanje, komentar, predlog, pohvalu, kritiku" style="width: 100%; height: 150px;"></textarea>
                          </div>
                          <div class="form-group ">
                              <input type="submit" name="btnSubmit " class="btn btn-outline-info" id="submitComment" value="Pošalji poruku" />
                          </div>
                      </div>
                      <div class="col-md-6 px-5 generalInformation d-flex flex-column align-self-center">
                        <p>Otvoreni smo od 00 do 24h za sva pitanja, predloge i komentare.</p>
                      </div>
                  </div>
              </form>
  </div>

  </div><!-- table-responsive -->
 </div> <!-- results container end -->

 {{> _footer}}

 <script>

 document.addEventListener("contextmenu", function (e){
     e.preventDefault();
 }, false)

 let questionField = document.getElementById('questionComment')
 questionField.addEventListener('paste', e => e.preventDefault());

let formSubmission = document.getElementById('contactDetails')

formSubmission.onkeypress = e => {
  let key = e.charCode || e.keyCode || 0;
  if (key == 13) {
    e.preventDefault();
  }
}
 </script>
