<div class="container" id="contactUs">
  <div class="row">
    <div class="container contact-form mt-4">
        <h1 class="headTitleConditions">Kontakt</h1>
              <form method="POST" action="/contact" class="mt-4">

                 <div class="row">
                      <div class="col-md-6 pt-4 pr-5" style="border-right:1px solid #e1e1e1;">
                          <div class="form-group">
                              <input type="text" name="name" class="form-control" placeholder="Ime *" value="" />
                          </div>
                          <div class="form-group">
                              <input type="text" name="email" class="form-control" placeholder="E mail *" value="" />
                          </div>

                          <div class="form-group">
                              <input type="hidden" name="odjebjelansiran" class="form-control"  value="" />
                          </div>


                          <div class="form-group">
                              <textarea class="form-control" name="message" placeholder="Upišite ovde Vaše pitanje, komentar, predlog, pohvalu, kritiku" style="width: 100%; height: 150px;"></textarea>
                          </div>
                          <div class="form-group ">
                              <input type="submit" name="btnSubmit " class="btn btn-outline-info" value="Pošalji poruku" />
                          </div>
                      </div>
                      <div class="col-md-6 px-5 generalInformation d-flex flex-column align-self-center">
                        <p>Otvoreni smo od 00 do 24h za sva pitanja, predloge i komentare </p>
                      </div>
                  </div>
              </form>
  </div>

