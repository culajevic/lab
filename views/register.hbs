{{#each errors}}
  <div class="alert alert-danger text-center alert-dismissible fade show">{{text}}
  <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button></div>
  </div>
{{/each}}
<section id="registerForm">
  <div class="container-fluid">
    <div class="row mb-0">
      <!--  visible only on md and bigger -->
      <div class="d-none d-md-flex col-md-4" id="loginLeftSide">
        <div class="loginLeftSide">
          <a href="/">
          <img src="images/logoSmallSlice.svg" alt="labcube" class="smallLogo img-fluid">
          </a>
        </div>
        <div class="socialLogin">
          <a href="#" class=""><i class="fab fa-twitter"></i></a>
          <a href="#" class=""><i class="fab fa-instagram"></i></a>
          <a href="#" class=""><i class="fab fa-facebook-f"></i></a>
          <a href="#" class=""><i class="fab fa-youtube"></i></a>
        </div><!-- social col-md-4 end -->
      </div><!-- login leftside end -->

      <div class="col-sm-12 col-md-8 pl-0 pr-0">

        <div class="backgroundImageRegister">
          <div class="blueOverlay">

                <form action="/register" method="POST" class="registerForm d-flex flex-column justify-content-center login ml-5 mt-5 col-5" >
                  <h2 class="">Kreirajte nalog</h2>
                  <!-- <span class="pb-4 text-white">Ukoliko  <a href="/prijava" class="text-warning">ovde</a> se možete prijaviti.</span> -->
                  <div class="form-group mt-4">
                    <input id="emailValue" type="email" name="email" class="form-control" placeholder="upišite Vašu mejl adresu">
                    <label for="emailValue" class="text-white">email</label>
                  </div>
                  <div class="form-group">
                    <input id="passwordValue" type="password" name="password" class="form-control" placeholder="odaberite lozinku">
                    <label for="passwordValue" class="text-white">lozinka</label>
                  </div>
                  <!-- <p class="text-white">Pročitala/Pročitao sam i slažem sa politikom privatnosti i uslovima korišćenja.</p> -->
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="privacy" id="privacy">
                    <label for="privacy" class="text-white"><a href="/politika-privatnosti" class="nolink text-white" target="_blank">Politika privatnosti</a></label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="conditions" id="conditions">
                    <label for="conditions" class="text-white"><a href="/uslovi-koriscenja" class="nolink text-white" target="_blank">Uslovi korišćenja</a></label>
                  </div>
                  <!-- <div class="row"> -->
                    <button class="mt-4 btn btn-outline-primary text-white text-uppercase btn-block mb-5">napravi nalog</button>
                  <!-- </div> -->
                  <!-- <small class="text-white">Zaboravili ste lozinku?</small> -->
                  <p><a href="/google"  class="">
                    <img src="images/googleBtn.png" style="height:40px;" alt="">
                  </a></p>
                </form>
              <!-- </form> -->
          </div><!-- blueoverlay -->
        </div><!-- backgroundImage -->
      </div><!-- col-8 -->
      <div class="" style="position:absolute; top:20px; right:30px;">
        <span class="text-white mt-5">Imate nalog?<button class="ml-3 btn btn-outline-primary text-uppercase text-white"><a href="/prijava" class="text-decoration-none text-white">prijavi se</a></span>
      </div>
    </div><!-- row -->
  </div><!-- container-fluid -->
</section>
