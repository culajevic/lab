{{> _innerNavBackend}}
<div class="container">
  <div class="row">
    {{#if numOfReferences}}
      <table class="table table-hover">
        <thead>
          <tr>
            <!-- <th scope="col">id</th> -->
            <th scope="col">Naslov</th>
            <th scope="col">Website</th>
          </tr>
        </thead>
        <tbody>
          {{#each allReferences}}
          <tr>
            <!-- <td>{{this.id}}</td> -->
            <td>{{this.referenceTitle}}</td>
            <td>{{this.referenceLink}}</td>
            <td><a href='addReference/{{this._id}}' class="btn btn-info">Edit</a></td>
            <td><a href='' data-id={{this.id}} class="btn btn-danger deleteDocument">Delete</a></td
          </tr>
          {{/each}}
        </tbody>
      </table>
      {{else}}
        <div class="m-auto">
          <h3 class="mt-4">Trenutno nema nijedna referenca u bazi</h3>
        </div>
      {{/if}}
  </div>
</div>

{{> _footer}}
